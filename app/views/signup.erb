<div class="container">
  <h1>Welcome New SOT!</h1>
  <% if @error %>
      <p class="error"><%= @error %></p>
  <% end %>
  <% if @signup_errors %>
      <% @signup_errors.each do |error,message| %>
          <p class="error"><%= "#{error.capitalize} #{message.first}" %></p>
      <% end %>
  <% end %>
  <form action="/users/signup" method="post">
    <input type="text" placeholder="Username" name="username">
    <input type="text" placeholder="Email" name="email">
    <input type="text" placeholder="Phone number" name="phone_number"><br><br>
    <input type="password" placeholder="Password" name="password">
    <input type="password" placeholder="Verify Password" name="verify_password">
    <input type="submit" value="Signup">
  </form>
</div>